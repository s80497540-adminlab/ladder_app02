                        let new_z = Math.max(0.25, old_z - 0.25);
                        root.chart_y_zoom = new_z;

                        let py2 = cy - mid - (yw - mid) * new_z;
                        root.chart_pan_y = Math.max(-1.0, Math.min(1.0, py2));
                    }

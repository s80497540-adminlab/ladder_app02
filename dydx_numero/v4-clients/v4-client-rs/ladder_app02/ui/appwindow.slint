            x: 0px; y: 0px; width: parent.width; height: parent.height;

            property <length> last_x;
            property <length> last_y;
            property <bool> dragging;

            pointer-event(event) => {
                if !root.allow_drag {
                    EventResult.reject
                } else if event.kind == PointerEventKind.down {
                    dragging = true;
                    last_x = self.mouse-x;
                    last_y = self.mouse-y;
                } else if event.kind == PointerEventKind.up {
                    dragging = false;
                    let col_px = root.grid_col_w / 1px;
                    let row_px = root.grid_row_h / 1px;
                    if col_px > 0.0 && row_px > 0.0 {
                        root.x = Math.round((root.x / 1px) / col_px) * root.grid_col_w;
                        root.y = Math.round((root.y / 1px) / row_px) * root.grid_row_h;
                    }
                } else if event.kind == PointerEventKind.move && dragging {
                    let dx = self.mouse-x - last_x;
                    let dy = self.mouse-y - last_y;
                    root.x = root.x + dx;
                    root.y = root.y + dy;
                    last_x = self.mouse-x;
                    last_y = self.mouse-y;
                }
            }
        }

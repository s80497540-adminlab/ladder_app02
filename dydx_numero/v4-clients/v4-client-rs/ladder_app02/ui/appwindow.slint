                    text: root.settings_panel_open ? "Settings " : "Settings";
                    clicked => { root.settings_panel_open = !root.settings_panel_open; }
                }
                Button {
                    x: col_w * 25;
                    y: row1_y;
                    width: col_w * 3;
                    height: row_h;
                    text: root.session_recording ? "Sess: On" : "Sess: Off";
                    clicked => {
                        root.session_recording = !root.session_recording;
                        root.session_recording_changed(root.session_recording);

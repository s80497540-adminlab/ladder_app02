                                } else {
                                    let t = pos / parent.width;
                                    let lvl = 5 + Math.floor(t * 45.0);
                                    if lvl != last_sent {
                                        last_sent = lvl;
                                        root.dom_depth_levels = lvl;
                                        root.dom_depth_changed(lvl);
                                    }
                                }
                            }

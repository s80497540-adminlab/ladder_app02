component GridOverlay inherits Rectangle {
    in property <bool> enabled: false;
    in property <[string]> col_labels;
    in property <[string]> row_labels;
    in-out property <int> cursor_col: -1;
    in-out property <int> cursor_row: -1;
    in property <length> label_font_size: 10px;
    in property <string> label_font_family: "Avenir Next";
    in property <color> line_color: #3a4660;
    in property <float> line_opacity: 0.25;

    visible: enabled;
    background: #00000000;
    clip: false;

    property <length> col_w: col_labels.length > 0 ? (self.width / col_labels.length) : self.width;
    property <length> row_h: row_labels.length > 0 ? (self.height / row_labels.length) : self.height;

    for label[i] in col_labels : Rectangle {
        x: i * col_w;
        y: 0px;
        width: 1px;
        height: parent.height;
        background: line_color;
        opacity: line_opacity;
    }
    for label[i] in col_labels : Text {
        x: i * col_w + 2px;
        y: 2px;
        text: label;
        color: line_color;
        font-size: label_font_size;
        font-family: label_font_family;
    }

    for label[i] in row_labels : Rectangle {
        x: 0px;
        y: i * row_h;
        width: parent.width;
        height: 1px;
        background: line_color;
        opacity: line_opacity;
    }
    for label[i] in row_labels : Text {
        x: 2px;
        y: i * row_h + 2px;
        text: label;
        color: line_color;
        font-size: label_font_size;
        font-family: label_font_family;
    }
}

component LayoutHandle inherits Rectangle {
    in property <bool> enabled: false;
    in property <string> label;
    in-out property <length> target_x;
    in-out property <length> target_y;
    in property <length> target_w;
    in property <length> target_h;
    in property <length> grid_col_w: 1px;
    in property <length> grid_row_h: 1px;
    in property <bool> show_layer: false;
    in-out property <int> layer: 0;
    in property <length> pass1_x: 0px;
    in property <length> pass1_y: 0px;
    in property <length> pass1_w: 0px;
    in property <length> pass1_h: 0px;
    in property <length> pass2_x: 0px;
    in property <length> pass2_y: 0px;
    in property <length> pass2_w: 0px;
    in property <length> pass2_h: 0px;
    in property <length> pass3_x: 0px;
    in property <length> pass3_y: 0px;
    in property <length> pass3_w: 0px;
    in property <length> pass3_h: 0px;

    x: target_x;
    y: target_y;
    width: target_w;
    height: target_h;
    visible: enabled;
    background: #2a86ff22;
    border-width: 1px;
    border-color: #4aa6ff;
    border-radius: 3px;

    Rectangle {
        x: 0px;
        y: 0px;
        width: parent.width;
        height: 18px;
        background: #0b1630cc;

        Text {
            x: 6px;
            y: 0px;
            width: parent.width - (show_layer ? 64px : 12px);
            height: parent.height;
            text: show_layer ? (label + "  L=" + layer) : label;
            color: #dfe8ff;
            font-size: 10px;
            vertical-alignment: center;
        }

        Rectangle {
            x: parent.width - 52px;
            y: 2px;
            width: 24px;
            height: 14px;
            background: #1f2b4a;
            border-width: 1px;
            border-color: #3b4a70;
            border-radius: 2px;
            visible: show_layer;

            Text {
                x: 0px;
                y: 0px;
                width: parent.width;
                height: parent.height;
                text: "L-";
                color: #c9d4ea;
                font-size: 9px;
                horizontal-alignment: center;
                vertical-alignment: center;
            }

            TouchArea {
                clicked => { layer = Math.max(0, layer - 1); }
            }
        }

        Rectangle {
            x: parent.width - 26px;
            y: 2px;
            width: 24px;
            height: 14px;
            background: #1f2b4a;
            border-width: 1px;
            border-color: #3b4a70;
            border-radius: 2px;
            visible: show_layer;

            Text {
                x: 0px;
                y: 0px;
                width: parent.width;
                height: parent.height;
                text: "L+";
                color: #c9d4ea;
                font-size: 9px;
                horizontal-alignment: center;
                vertical-alignment: center;
            }

            TouchArea {
                clicked => { layer = Math.min(2, layer + 1); }
            }
        }
    }

    TouchArea {
        x: 0px;
        y: 0px;
        width: parent.width;
        height: parent.height;

        property <length> last_x;
        property <length> last_y;
        property <bool> dragging;

        pointer-event(event) => {
            let in_pass1 =
                pass1_w > 0px && pass1_h > 0px
                && self.mouse-x >= pass1_x && self.mouse-x <= (pass1_x + pass1_w)
                && self.mouse-y >= pass1_y && self.mouse-y <= (pass1_y + pass1_h);
            let in_pass2 =
                pass2_w > 0px && pass2_h > 0px
                && self.mouse-x >= pass2_x && self.mouse-x <= (pass2_x + pass2_w)
                && self.mouse-y >= pass2_y && self.mouse-y <= (pass2_y + pass2_h);
            let in_pass3 =
                pass3_w > 0px && pass3_h > 0px
                && self.mouse-x >= pass3_x && self.mouse-x <= (pass3_x + pass3_w)
                && self.mouse-y >= pass3_y && self.mouse-y <= (pass3_y + pass3_h);
            let in_pass = in_pass1 || in_pass2 || in_pass3;

            if event.kind == PointerEventKind.down {
                if in_pass {
                    EventResult.reject
                } else {
                dragging = true;
                last_x = self.mouse-x;
                last_y = self.mouse-y;
                EventResult.accept
                }
            } else if event.kind == PointerEventKind.up {
                if dragging {
                    dragging = false;
                    let col_px = grid_col_w / 1px;
                    let row_px = grid_row_h / 1px;
                    if col_px > 0.0 && row_px > 0.0 {
                        target_x = Math.round((target_x / 1px) / col_px) * grid_col_w;
                        target_y = Math.round((target_y / 1px) / row_px) * grid_row_h;
                    }
                    EventResult.accept
                } else if in_pass {
                    EventResult.reject
                } else {
                    EventResult.accept
                }
            } else if event.kind == PointerEventKind.move {
                if dragging {
                    let dx = self.mouse-x - last_x;
                    let dy = self.mouse-y - last_y;
                    target_x = target_x + dx;
                    target_y = target_y + dy;
                    last_x = self.mouse-x;
                    last_y = self.mouse-y;
                    EventResult.accept
                } else if in_pass {
                    EventResult.reject
                } else {
                    EventResult.accept
                }
            } else if in_pass {
                EventResult.reject
            } else {
                EventResult.accept
            }
        }
    }
}


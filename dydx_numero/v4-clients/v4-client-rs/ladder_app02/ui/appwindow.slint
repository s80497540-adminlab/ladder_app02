                label: "Orderbook";
                target_x <=> root.orderbook_x;
                target_y <=> root.orderbook_y;
                target_w: root.grid_col_w * 11;
                target_h: root.grid_row_h * 6;
                grid_col_w: root.grid_col_w;
                grid_row_h: root.grid_row_h;
                show_layer: true;
                layer <=> root.orderbook_layer;
            }
            LayoutHandle {
                enabled: root.layout_edit_mode;
                label: "Settings";
                target_x <=> root.settings_x;
                target_y <=> root.settings_y;
                target_w: root.grid_col_w * 12;
                target_h: root.grid_row_h * 8;
                grid_col_w: root.grid_col_w;
                grid_row_h: root.grid_row_h;
                show_layer: true;
                layer <=> root.settings_layer;
            }
            LayoutHandle {
                enabled: root.layout_edit_mode;
                label: "MicroDepth";
                target_x <=> root.microdepth_x;
                target_y <=> root.microdepth_y;
                target_w: root.grid_col_w * 8;
                target_h: root.grid_row_h * 2;
                grid_col_w: root.grid_col_w;
                grid_row_h: root.grid_row_h;
                show_layer: true;
                layer <=> root.microdepth_layer;
            }
            LayoutHandle {
                enabled: root.layout_edit_mode;
                label: "Ticker List";
                target_x <=> root.ticker_dropdown_x;
                target_y <=> root.ticker_dropdown_y;
                target_w: root.grid_col_w * 8;
                target_h: root.grid_row_h * 7;
                grid_col_w: root.grid_col_w;
                grid_row_h: root.grid_row_h;
                show_layer: true;
                layer <=> root.ticker_dropdown_layer;
            }
            LayoutHandle {
                enabled: root.layout_edit_mode && root.chart_popout_open;
                label: "Chart Popout";
                target_x <=> root.chart_popout_x;
                target_y <=> root.chart_popout_y;
                target_w: root.chart_popout_w;
                target_h: root.chart_popout_h;
                grid_col_w: root.grid_col_w;
                grid_row_h: root.grid_row_h;
                show_layer: true;
                layer <=> root.chart_popout_layer;
            }

            Button {
                x: root.header_x + root.grid_col_w * 28;
                y: root.header_y;
                width: root.grid_col_w * 2;
                height: root.grid_row_h;
                text: "Close";
                clicked => { root.close_and_save_requested(); }
            }
            Button {
                x: root.header_x + root.grid_col_w * 30;
                y: root.header_y;
                width: root.grid_col_w * 3;
                height: root.grid_row_h;
                text: root.grid_enabled ? "Grid: On" : "Grid: Off";
                clicked => { root.grid_enabled = !root.grid_enabled; }
            }
            Button {
                x: root.header_x + root.grid_col_w * 33;
                y: root.header_y;
                width: root.grid_col_w * 3;
                height: root.grid_row_h;
                text: root.layout_edit_mode ? "Edit " : "Edit";
                clicked => { root.layout_edit_mode = !root.layout_edit_mode; }
            }
        }
        }

        // Horizontal scrollbar
        hscroll := Rectangle {
            x: 2px;
            y: parent.height - 12px;
            width: parent.width - 14px;
            height: 10px;
            background: #202633;
            border-radius: 5px;
            visible: max_scroll_x > 0.0;

            property <float> bar_w: self.width / 1px;
            property <float> knob_w: Math.max(30.0, bar_w * (viewport_w_px / content_w_px));
            property <float> t: max_scroll_x <= 0.0 ? 0.0 : (sx / max_scroll_x);
            property <float> knob_x: t * Math.max(0.0, bar_w - knob_w);

            Rectangle {
                x: knob_x * 1px;
                y: -1px;
                width: knob_w * 1px;
                height: parent.height + 2px;
                background: #7070ff;
                border-radius: 6px;

                TouchArea {
                    x: 0px; y: -6px;
                    width: parent.width; height: parent.height + 12px;

                    property <bool> dragging;

                    pointer-event(event) => {
                        if event.kind == PointerEventKind.down {
                            dragging = true;
                        } else if event.kind == PointerEventKind.up {
                            dragging = false;
                        } else if event.kind == PointerEventKind.move && dragging {
                            let mx = self.mouse-x / 1px;
                            let bw = hscroll.bar_w;
                            let kw = hscroll.knob_w;

                            let nx = Math.max(0.0, Math.min(bw - kw, mx - kw * 0.5));
                            let nt = (bw - kw) <= 0.0 ? 0.0 : (nx / (bw - kw));

                            root.ui_scroll_x_px = nt * viewport.max_scroll_x;
                        }
                    }
                }
            }
        }

        // Vertical scrollbar
        vscroll := Rectangle {
            x: parent.width - 12px;
            y: 2px;
            width: 10px;
            height: parent.height - 14px;
            background: #202633;
            border-radius: 5px;
            visible: max_scroll_y > 0.0;

            property <float> bar_h: self.height / 1px;
            property <float> knob_h: Math.max(30.0, bar_h * (viewport_h_px / content_h_px));
            property <float> t: max_scroll_y <= 0.0 ? 0.0 : (sy / max_scroll_y);
            property <float> knob_y: t * Math.max(0.0, bar_h - knob_h);

            Rectangle {
                x: -1px;
                y: knob_y * 1px;
                width: parent.width + 2px;
                height: knob_h * 1px;
                background: #7070ff;
                border-radius: 6px;

                TouchArea {
                    x: -6px; y: 0px;
                    width: parent.width + 12px; height: parent.height;

                    property <bool> dragging;

                    pointer-event(event) => {
                        if event.kind == PointerEventKind.down {
                            dragging = true;
                        } else if event.kind == PointerEventKind.up {
                            dragging = false;
                        } else if event.kind == PointerEventKind.move && dragging {
                            let my = self.mouse-y / 1px;
                            let bh = vscroll.bar_h;
                            let kh = vscroll.knob_h;

                            let ny = Math.max(0.0, Math.min(bh - kh, my - kh * 0.5));
                            let nt = (bh - kh) <= 0.0 ? 0.0 : (ny / (bh - kh));

                            root.ui_scroll_y_px = nt * viewport.max_scroll_y;
                        }
                    }
                }
            }
        }

        // Popout drawn LAST so it sits on top, and NOT scrolled
        if root.chart_popout_open && root.chart_popout_layer == 0 : ChartPopoutPanel {
            open <=> root.chart_popout_open;
            px: root.chart_popout_x;
            py: root.chart_popout_y;
            pw: root.chart_popout_w;
            ph: root.chart_popout_h;
            grid_col_w: root.grid_col_w;
            grid_row_h: root.grid_row_h;
            z: 0;
            allow_drag: false;

            title: "Chart Popout (wheel: zoom, drag: pan)";

            points <=> root.candle_points;
            mid_line_y: root.candle_midline;
            position_entry_y: root.position_entry_y;
            position_entry_visible: root.position_entry_visible;
            position_entry_color: root.position_entry_color;
            drawings <=> root.drawings;
            draw_ticks <=> root.draw_ticks;
            heatmap_cells <=> root.heatmap_cells;
            heatmap_enabled: root.heatmap_enabled;
            advanced_mode: root.chart_view_mode == "Advanced";
            draw_tool: root.draw_tool;

            x_zoom <=> root.chart_x_zoom;
            y_zoom <=> root.chart_y_zoom;
            pan_x  <=> root.chart_pan_x;
            pan_y  <=> root.chart_pan_y;
            cursor_x <=> root.chart_cursor_x;
            cursor_y <=> root.chart_cursor_y;

            draw_begin(x, y) => { root.draw_begin(x, y); }
            draw_update(x, y) => { root.draw_update(x, y); }
            draw_end(x, y) => { root.draw_end(x, y); }
            draw_poly_sides_delta(delta) => { root.draw_poly_sides_delta(delta); }
        }
        if root.chart_popout_open && root.chart_popout_layer == 1 : ChartPopoutPanel {
            open <=> root.chart_popout_open;
            px <=> root.chart_popout_x;
            py <=> root.chart_popout_y;
            pw <=> root.chart_popout_w;
            ph <=> root.chart_popout_h;
            grid_col_w: root.grid_col_w;
            grid_row_h: root.grid_row_h;
            z: 1;
            allow_drag: !root.layout_edit_mode;

            title: "Chart Popout (wheel: zoom, drag: pan)";

            points <=> root.candle_points;
            mid_line_y: root.candle_midline;
            position_entry_y: root.position_entry_y;
            position_entry_visible: root.position_entry_visible;
            position_entry_color: root.position_entry_color;
            drawings <=> root.drawings;
            draw_ticks <=> root.draw_ticks;
            heatmap_cells <=> root.heatmap_cells;
            heatmap_enabled: root.heatmap_enabled;
            advanced_mode: root.chart_view_mode == "Advanced";
            draw_tool: root.draw_tool;

            x_zoom <=> root.chart_x_zoom;
            y_zoom <=> root.chart_y_zoom;
            pan_x  <=> root.chart_pan_x;
            pan_y  <=> root.chart_pan_y;
            cursor_x <=> root.chart_cursor_x;
            cursor_y <=> root.chart_cursor_y;

            draw_begin(x, y) => { root.draw_begin(x, y); }
            draw_update(x, y) => { root.draw_update(x, y); }
            draw_end(x, y) => { root.draw_end(x, y); }
            draw_poly_sides_delta(delta) => { root.draw_poly_sides_delta(delta); }
        }
        if root.chart_popout_open && root.chart_popout_layer == 2 : ChartPopoutPanel {
            open <=> root.chart_popout_open;
            px: root.chart_popout_x;
            py: root.chart_popout_y;
            pw: root.chart_popout_w;
            ph: root.chart_popout_h;
            grid_col_w: root.grid_col_w;
            grid_row_h: root.grid_row_h;
            z: 2;
            allow_drag: false;

            title: "Chart Popout (wheel: zoom, drag: pan)";

            points <=> root.candle_points;
            mid_line_y: root.candle_midline;
            position_entry_y: root.position_entry_y;
            position_entry_visible: root.position_entry_visible;
            position_entry_color: root.position_entry_color;
            drawings <=> root.drawings;
            draw_ticks <=> root.draw_ticks;
            heatmap_cells <=> root.heatmap_cells;
            heatmap_enabled: root.heatmap_enabled;
            advanced_mode: root.chart_view_mode == "Advanced";
            draw_tool: root.draw_tool;

            x_zoom <=> root.chart_x_zoom;
            y_zoom <=> root.chart_y_zoom;
            pan_x  <=> root.chart_pan_x;
            pan_y  <=> root.chart_pan_y;
            cursor_x <=> root.chart_cursor_x;
            cursor_y <=> root.chart_cursor_y;

            draw_begin(x, y) => { root.draw_begin(x, y); }
            draw_update(x, y) => { root.draw_update(x, y); }
            draw_end(x, y) => { root.draw_end(x, y); }
            draw_poly_sides_delta(delta) => { root.draw_poly_sides_delta(delta); }
        }
    }
}
